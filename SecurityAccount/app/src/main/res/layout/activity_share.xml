<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shareBackground"
    android:orientation="vertical">

    <com.chauncy.account.view.PageRecyclerView
        android:id="@+id/share_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.chauncy.account.view.PageIndicatorView
        android:id="@+id/share_indicator"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

   <com.chauncy.account.share.ShareScrollView
       android:id="@+id/share_scrollView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
</LinearLayout>
